@page
@model BookListRazor.Pages.BookPages.CreateModel

<h1 class="text-info">Create Book List</h1>
<div class="container">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Cbook.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Cbook.Name" class="form-control" />  @*menna mehemai binding karanne eka lesi*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Cbook.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Cbook.Author" class="form-control" />  @*menna mehemai binding karanne eka lesi*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Cbook.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Cbook.ISBN" class="form-control" />  @*menna mehemai binding karanne eka lesi*@
            </div>
        </div>
        <div class="form-group row offset-4">
            <div class="col-3 ">
                <input type="submit" value="Create" class="btn btn-primary form-control " />  @*meke input eka denne api eka fill karana nisa*@
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control " asp-page="Index">Back To List</a>
            </div>
        </div>

    </form>
</div>

