@page
@model BookListRazor.Pages.BookPages.EditModel

<h1 class="text-info" style="margin-bottom:20px">Edit Book List </h1>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="EBook.Id" class="form-control" />
        <div class="txt-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EBook.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="EBook.Name" class="form-control" />  @*menna mehemai binding karanne eka lesi*@
            </div>
            <span asp-validation-for="EBook.Name" class="txt-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EBook.Author"></label>
            </div>
            <div class="col-5">
                <input asp-for="EBook.Author" class="form-control" />  @*menna mehemai binding karanne eka lesi*@
            </div>
            <span asp-validation-for="EBook.Author"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EBook.ISBN"></label>
            </div>
            <div class="col-5">
                <input asp-for="EBook.ISBN" class="form-control" />  @*menna mehemai binding karanne eka lesi*@
            </div>
            <span asp-validation-for="EBook.ISBN"></span>
        </div>
        <div class="form-group row offset-4">
            <div class="col-3 ">
                <input type="submit" value="Update" class="btn btn-primary form-control " />  @*meke input eka denne api eka fill karana nisa*@
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control " asp-page="Index">Back To List</a>
            </div>
        </div>

    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />  @*meken thamai server side validation eka karanne*@
}